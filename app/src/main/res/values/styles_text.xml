<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Widget" />

    <style name="Widget.Airvet" />

    <style name="Widget.Airvet.TextView" />

    <style name="Widget.Airvet.TextView.Heading" parent="Widget.Airvet.TextView">
        <item name="android:textSize">@dimen/text_size_heading</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="Widget.Airvet.TextView.Expandable" parent="Widget.Airvet.TextView.Heading">
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="Widget.Airvet.TextView.Title" parent="Widget.Airvet.TextView.Heading">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="Widget.Airvet.TextView.Subtitle" parent="Widget.Airvet.TextView.Title">
        <item name="android:textSize">@dimen/text_size_subtitle</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.Airvet.TextView.Body" parent="Widget.Airvet.TextView.Subtitle">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
    </style>

    <style name="Widget.Airvet.TextView.Content" parent="Widget.Airvet.TextView.Body">
        <item name="android:textSize">@dimen/text_size_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Airvet.TextView.Toolbar" parent="Widget.Airvet.TextView.Content">
        <item name="android:textSize">@dimen/text_size_toolbar</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>

    <style name="Widget.Airvet.TextView.Small" parent="Widget.Airvet.TextView.Content">
        <item name="android:textSize">@dimen/text_size_small</item>
        <!--<item name="android:textColor">@color/colorTextGrey</item>-->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.Airvet.TextView.FootNote" parent="Widget.Airvet.TextView.Small">
        <item name="android:textSize">@dimen/text_size_footnote</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Widget.Airvet.TextView.Error" parent="Widget.Airvet.TextView.FootNote">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Widget.Airvet.TextView.Tiny" parent="Widget.Airvet.TextView.FootNote">
        <item name="android:textSize">@dimen/text_size_tiny</item>
    </style>

    <style name="Widget.Airvet.TextView.Button" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_bg_primary</item>
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:minWidth">90dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>


    <style name="Widget.Airvet.TextView.TabTextAppearance" parent="Widget.Airvet.TextView.Content">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>


    <style name="Widget.Airvet.TextView.Content.Grey" parent="Widget.Airvet.TextView.Content">
        <item name="android:textColor">@color/grey</item>
    </style>


    <style name="Widget.Airvet.TextView.Body.Grey" parent="Widget.Airvet.TextView.Body">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Widget.Airvet.TextView.TabTextAppearance.Genre" parent="Widget.Airvet.TextView.Small">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>

</resources>